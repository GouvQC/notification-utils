{% if too_many_pages %}
  <div class='banner-dangerous bottom-gutter'>
    <h1 class='banner-title'>
      This letter is too long
    </h1>
    <p>
      Letters cannot be more than {{ page_numbers[-1] }} pages long
    </p>
  </div>
{% endif %}

{% for page_number in page_numbers %}
  <div class="letter">
    <img src="{{ image_url }}?page={{ page_number }}" alt="">
  </div>
{% endfor %}

<div class="visually-hidden">
  <h3>
    Recipient address
  </h3>
  <p>
    {{ address }}
  </p>
  <h3>
    Contact block
  </h3>
  <p>
    {{ contact_block }}
  </p>
  <h3>
    Content
  </h3>
  <p>
    {{ date }}
  </p>
  <h3>
    {{ subject }}
  </h3>
  {{ message }}
</div>
